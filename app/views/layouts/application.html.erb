    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li> <%= link_to 'See All Movies', movies_path  %></li>
            <li><%= link_to 'See All Directors', directors_path  %></li>
            <li><%= link_to 'Add Movie', new_choice_path %></li>
            <li>  <% if session[:user_id] %>
        <% @user = User.find(session[:user_id]) %>
